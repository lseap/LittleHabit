/* pages/today/today.wxss */

.all {
  width: 100%;
  height: 100vh;
  background: red;
  text-align: center;
}

.logo {
  position: relative;
  top: 260rpx;
  width: 400rpx;
  height: 280rpx;
}

.authorize {
  position: relative;
  top: 310rpx;
  width: 410rpx;
  height: 75rpx;
  font-size: 12px;
  color: white;
  background-color: #39d69d;
  box-shadow: 0px 6px 8px rgba(57, 214, 157, 0.6);
}

.authorize::after {
  border: none;
}

.title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.complement {
  width: 360rpx;
  height: 76rpx;
  margin: 20rpx;
  margin-left: 60rpx;
}

.wait_complement {
  width: 360rpx;
  height: 76rpx;
  margin: 20rpx;
  text-align: right;
  margin-right: 60rpx;
}

.com, .wcom {
  font-size: 36rpx;
  font-weight: bold;
  font-family: PingFang SC;
}

.wcomdata, .comdata {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.wcditem, .cditem {
  width: 150rpx;
  height: 250rpx;
  margin: 20rpx;
  text-align: center;
}

.wcimg, .cimg {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.wccontent, .wctime, .ccontent, .ctime {
  width: 150rpx;
  height: 36rpx;
  font-size: 24rpx;
  color: #3d3d3d;
  font-family: PingFang SC;
  margin-top: 5rpx;
}

.ctimeNum {
  color: #39d69d;
}

.otherbutton {
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 40rpx;
  right: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(180deg, #bae6d6 0%, #39d69d 100%);
  border-radius: 50%;
  opacity: 1;
}

.menu_bar {
  flex-direction: column;
  height: 240rpx;
  width: 234rpx;
  position: fixed;
  bottom: 150rpx;
  right: 25rpx;
  justify-content: center;
  align-items: center;
  box-shadow: 0rpx 0rpx 6rpx #e1e1e1;
  border-radius: 4px;
}

.menuItem1, .menuItem2, .menuItem3 {
  height: 80rpx;
  width: 190rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.menuItem1, .menuItem2 {
  border-bottom: 1rpx solid #e1e1e1;
}

.item1img, .item2img, .item3img {
  width: 35rpx;
  height: 35rpx;
}

.item1text, .item2text, .item3text {
  font-size: 28rpx;
  color: #3d3d3d;
  font-family: PingFang SC;
  margin-left: 25rpx;
}

.modal-mask, .cmodal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.08);
  opacity: 0.5;
  overflow: hidden;
}

.modal-dialog {
  width: 480rpx;
  height: 610rpx;
  overflow: hidden;
  position: fixed;
  top: 250rpx;
  left: 135rpx;
  z-index: 9999;
  background: #fff;
  border-radius: 4rpx;
  box-shadow: 0px 0px 6px #e1e1e1;
}

.modal-title {
  padding-top: 25rpx;
  font-size: 36rpx;
  color: #3d3d3d;
  font-family: PingFang SC;
  text-align: center;
}

.modal-content {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
}

.modal-input {
  width: 410rpx;
  height: 380rpx;
  display: flex;
  background: #fff;
  border: 1rpx solid #e1e1e1;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.input {
  width: 400rpx;
  height: 380rpx;
  font-size: 22rpx;
  line-height: 22rpx;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  color: #8a8a8a;
}

input-holder {
  color: #8a8a8a;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.btn-cancel, .cbtn-cancel {
  width: 184rpx;
  height: 74rpx;
  color: #3d3d3d;
  font-size: 30rpx;
  border: 1rpx solid #bae6d6;
  opacity: 1;
  border-radius: 2px;
  line-height: 74rpx;
  text-align: center;
  margin-left: 40rpx;
  margin-right: 20rpx;
}

.btn-confirm, .cbtn-confirm {
  width: 184rpx;
  height: 74rpx;
  color: #fff;
  font-size: 30rpx;
  background: #39d69d;
  opacity: 1;
  border-radius: 2px;
  line-height: 74rpx;
  text-align: center;
  margin-left: 20rpx;
  margin-right: 40rpx;
}

.cmodal-dialog {
  width: 480rpx;
  height: 310rpx;
  overflow: hidden;
  position: fixed;
  top: 250rpx;
  left: 135rpx;
  background: #fff;
  border-radius: 4rpx;
  box-shadow: 0px 0px 6px #e1e1e1;
}

.cmodal-title {
  padding-top: 25rpx;
  font-size: 34rpx;
  color: #3d3d3d;
  font-family: PingFang SC;
  text-align: center;
}

.cmodal-content {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  justify-content: center;
  margin: 40rpx auto;
}
