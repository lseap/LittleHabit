
.title{
  color: #BAE6D6;
  font-size: 26rpx;
  margin-left: 45rpx;
  margin-bottom: 25rpx;
}

.simpleRecord_box {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  /* border: 1px solid red; */
}

.simpleRecord_left {
  display: inline-block;
  position: relative;
  width: 30%;
  text-align: center;
  font-size: 20rpx;
  color: #8a8a8a;
  /* border: 1px solid red; */
}

.simpleRecord_data, .circle {
  display: inline-block;
}

.circle {
  position: absolute;
  left: -8rpx;
  top: -1rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #39d69d;
}

.simpleRecord_right {
  display: inline-block;
  position: relative;
  width: 60%;
  padding-top: 10rpx;
  padding-bottom: 30rpx;
  border-left: 1px solid #e1e1e1;
}

.simpleRecord_content {
  position: relative;
  font-size: 22rpx;
  color: #3d3d3d;
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
  border: 1rpx solid rgba(225, 225, 225, 1);
  box-shadow: 0rpx 4rpx 8rpx rgba(0, 0, 0, 0.04);
  border-radius: 8rpx;
}