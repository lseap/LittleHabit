/* pages/mycard/mycard.wxss */
.cardtext{
  font-size:28rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:#BAE6D6;
  opacity:1;
  margin: 40rpx;
}
.mycard{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}

.carditem{
  width:193rpx;
  height:248rpx;
  border:1rpx solid #707070;
  box-shadow:0px 4rpx 8rpx rgba(0,0,0,0.16);
  opacity:1;
  margin: 40rpx 20rpx 0 20rpx; 
}