  margin: 5rpx;
  opacity:1;
  border-radius:30px;
}

.confirm{
  width: 556rpx;
  height: 74rpx;
  background:#39D69D;
  opacity:1;
  border-radius:4rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  text-align: center;
  line-height: 74rpx;
  margin: auto;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
}