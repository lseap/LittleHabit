/* pages/Resign_card/Resign_card.wxss */
.head_title{
  width: 100%;
  height:320rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
} 

.head{
  width: 360rpx;
  height: 320rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}


.title{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:#FFFFFF;
}

.head_content{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size:40rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:#FFFFFF; 
}

.headimg{
  width: 52rpx;
  height: 39rpx;
  margin: 40rpx 40rpx 40rpx 0;
}

.cardnum{
  margin: 40rpx 0 40rpx 40rpx;
}

.content{
  width: 100%;
  height: 100%;
  background-color: #F8F8F8;
  padding-bottom: 420rpx;
}

.explain{
  width:750rpx;
  background:#FFFFFF;
  padding: 32rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.line{
  width:4rpx;
  height:36rpx;
  background:#39D69D;
}

.little_title{
  width:500rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:#333333;
  margin: 0 20rpx;
}

.answer{
  width:650rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:#333333;
  margin: 30rpx 0 0 0;
}

.getcard{
  width:750rpx;
  background:#FFFFFF;
  padding: 32rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.method{
  width:750rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:#666666;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0;
  padding: 40rpx 0 0 0;
  border-top: 1rpx solid #EFEFEF;
}
.share_content{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 160rpx;
}

.shareimg{
  width: 41rpx;
  height: 31rpx;
  margin-right: 20rpx;
}

.num{
  margin-left: 20rpx;
}

.sharebutton{
  width:110rpx;
  height:60rpx;
  border:2rpx solid #39D69D;
  border-radius:8rpx;
  background-color: #FFFFFF;
  padding: 0;
  margin: 0;
  text-align: center;
  line-height: 54rpx;
  font-size: 30rpx;
  color: #39D69D;
}

.sharebutton::after{
  border: none; 
}