/* pages/myself/myself.wxss */
.head_sculpture{
  width: 100%;
  height:320rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
} 

.head{
  width: 360rpx;
  height: 320rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head_style{
  width: 44rpx;
  height: 31rpx;
  margin-top: 35rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  border:2rpx solid #39D69D;
  border-radius: 50%;
}

.userinfo-nickname {
  margin: 20rpx 0;
  height:40rpx;
  font-size:32rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:#FFFFFF;
  text-align: center;
  opacity:1;
}

.mycontent{
  width: 690rpx;
  height: 100%;
  margin: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

.myfuction{
  width: 190rpx;
  height: 190rpx;
  margin: 17rpx 10rpx;
  background:#FFFFFF;
  border:1px solid #E1E1E1;
  box-shadow:0rpx 4rpx 8rpx rgba(0,0,0,0.04);
  opacity:1;
  border-radius:4rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.imgTitle{
  margin: 20rpx 0;
}